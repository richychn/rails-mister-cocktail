<% if cocktail.photo %>
  <% im = cl_image_path(cocktail.photo.path) %>
<% else %>
  <% im = 'https://unsplash.it/500/300' %>
<% end -%>

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= im %>');">
  <div class="banner-content">
    <h1><%= cocktail.name %></h1>
  </div>
</div>
